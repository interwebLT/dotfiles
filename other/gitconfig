[color]
  branch = auto
  diff = auto
  status = auto
  show = auto
  log = auto

[alias]
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  hist-time = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=iso
  word-diff = diff --color-words -b

[core]
  excludesfile = ~/.gitignore_global

[push]
  default = simple
